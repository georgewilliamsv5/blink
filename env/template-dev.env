# Development defaults (local docker-compose)
PAIR=BTC-USD
MODEL_NAME=blink_iforest
MLFLOW_TRACKING_URI=http://mlflow:5000
PG_DSN=postgresql+psycopg2://postgres:postgres@postgres:5432/blink
REDIS_HOST=redis

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=plain # plain | json
REQUEST_LOGS=true # api: enable request timing middleware

# Ingestion mode
# Sample Ingestion for data - This is here so I don't have to enable websocket on cloud (and pay for the cloud costs)
INGEST_MODE=sample # sample | live
SAMPLE_SOURCE=data/sample_trades.csv # path inside container; mount ./data â†’ /app/data
SAMPLE_PACING=fixed_ms=100 # realtime | speed=10x | fixed_ms=100
SIZE_DEFAULT=0.001 # used if CSV lacks a size column
TS_COLUMN=ts # fallback names tried: ts,timestamp,time,Date
PRICE_COLUMN=price # fallback: price,close,last,Price
SIZE_COLUMN=size # fallback: size,amount,volume,Size
TIME_IS_UNIX=false # true if ts column is epoch seconds